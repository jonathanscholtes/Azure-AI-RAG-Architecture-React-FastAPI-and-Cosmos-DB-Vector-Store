 <policies>
      <inbound>
        <base />
        <set-backend-service id="apim-generated-policy" backend-id="{0}" />
        <set-header name="Authorization" exists-action="override">
          <value>@("Bearer " + context.Request.Headers.GetValueOrDefault("Authorization", ""))</value>
        </set-header>
      </inbound>
      <backend>
        <base />
      </backend>
      <outbound>
        <base />
      </outbound>
      <on-error>
        <base />
      </on-error>
    </policies>